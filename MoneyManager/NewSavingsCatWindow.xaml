        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
        <TextBlock Text="Name"/>
         <TextBox x:Name="txtName"/>
         <TextBlock Text="Goal"/>
