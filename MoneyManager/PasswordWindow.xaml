<Window x:Class="MoneyManager.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FocusManager.FocusedElement="{Binding ElementName=txtPass}"
        Title="PasswordWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Height="50">
            <TextBlock Text="Password"/>
            <PasswordBox Width="250" x:Name="txtPass" KeyDown="txtPass_KeyDown"/>
            <Button HorizontalAlignment="Left"  Content="OK" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
