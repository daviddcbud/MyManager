<Window x:Class="MoneyManager.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer" Height="300" Width="300">
    <Grid>
        <StackPanel>
        <StackPanel>
            <StackPanel Margin="2">
                <TextBlock Text="From"    />
                    <ComboBox MinWidth="100"  HorizontalAlignment="Left"  x:Name="from"/>
                
            </StackPanel>
            <StackPanel Margin="2">
                <TextBlock Text="Amount"/>
                <TextBox Width="50" HorizontalAlignment="Left" x:Name="amount"/>
            </StackPanel>
            <StackPanel Margin="2">
                <TextBlock Text="To"/>
                    <ComboBox MinWidth="100"  HorizontalAlignment="Left"  x:Name="to"/>

            </StackPanel>
            
        </StackPanel>
            <Button Margin="2" HorizontalAlignment="Left" Click="Button_Click">Post</Button>
        </StackPanel>
    </Grid>
</Window>
